class Solution {
public:
    bool isleftvalid(char input){
        return input=='('||input=='{'||input=='[';
    }
    
    bool ismatch(char left,char right){
        switch(left){
                case'(':
                return right==')';
                case'{':
                return right=='}';
                case'[':
                return right==']';
        }
        return false;
    }
    
    bool isValid(string s) {
        stack<char> sta;
        for(int i=0;i<s.size();i++){
            if(isleftvalid(s[i])){
                sta.push(s[i]);
            }else if(sta.empty()||!ismatch(sta.top(),s[i])){
                    return false;
            }else{
                sta.pop();
            }
        }
        return sta.empty();
    }
};
