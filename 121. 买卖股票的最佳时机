class Solution {
public:
    int maxProfit(vector<int>& prices) {
        if(prices.size()<=1)
            return 0;
        int minp=prices[0];
        int pro=prices[1]-prices[0];
        for(int i=2;i<prices.size();i++){
            minp=min(minp,prices[i-1]);
            pro=max(pro,prices[i]-minp);
        }
        if(pro<0)
            return 0;
        return pro;
    }
};
